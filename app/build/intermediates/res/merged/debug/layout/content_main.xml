<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <Button
        android:id="@+id/camera"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:paddingLeft="12dip"
        android:background="@color/colorPrimary"
        android:drawableLeft="@drawable/camera"
        android:text="Open camera"
        android:textColor="@color/colorGoldText"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        android:layout_marginTop="24dp" />

    <Button
        android:id="@+id/file"
        android:paddingLeft="12dip"

        android:layout_width="170dp"
        android:layout_height="60dp"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="8dp"
        android:background="@color/colorPrimary"
        android:drawableLeft="@drawable/file"
        android:text="Search for file locally"
        android:textColor="@color/colorGoldText"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/camera"
        app:layout_constraintRight_toRightOf="@+id/camera"
        app:layout_constraintTop_toBottomOf="@+id/camera"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/welcome"
        android:textColor="@color/colorGoldText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:gravity="center"
        android:text="Welcome"
        android:textSize="42sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/welcome"

        android:layout_marginEnd="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        android:textColor="@color/colorGoldText"
        android:layout_marginTop="8dp"
        android:text="@string/introduction_main"
        android:gravity="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/welcome" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="351dp"
        android:layout_height="43dp"
        android:hint="@string/file_button"
        android:textSize="14sp"
        android:background="@color/colorPrimary"

        android:ems="10"
        android:inputType="number"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toBottomOf="@+id/file"
        android:textColorHint="@color/colorGoldText"
        app:layout_constraintVertical_bias="1.0"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp" />


</android.support.constraint.ConstraintLayout>